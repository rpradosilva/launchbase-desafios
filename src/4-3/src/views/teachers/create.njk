{% extends "layout.njk" %}

{% block title %}
<title>Teachers - Gym</title>
{% endblock %}

{% block content %}
<div class="card">
    <section class="card__avatar"></section>
    <form class="card__form" method="POST" action="/teachers">
        <div class="card__form-item">
            <label for="avatar_url" class="card__form-label">Avatar URL</label>
            <input type="url" name="avatar_url" class="card__form-input" placeholder="http://www.google.com">
        </div>
        <div class="card__form-item">
            <label for="name" class="card__form-label">Nome Completo</label>
            <input type="text" name="name" class="card__form-input" placeholder="João Silva">
        </div>
        <div class="card__form-item">
            <label for="born" class="card__form-label">Data de Nascimento</label>
            <input type="date" name="born" class="card__form-input" placeholder="00/00/0000">
        </div>
        <div class="card__form-item">
            <label for="graduate" class="card__form-label">Escolaridade</label>
            <select name="graduate" class="card__form-input">
                <option value="medio-completo" selected>Ensino Médio Completo</option>
                <option value="superior-completo">Ensino Superior Completo</option>
                <option value="mestrado">Mestrado</option>
                <option value="doutorado">Doutorado</option>
            </select>
        </div>
        <div class="card__form-item">
            <label class="card__form-label">Tipo de aula</label>
            <div class="card__form-input--radio">
                <div class="card__form-input">
                    <input type="radio" id="presencial" name="lession" value="presencial">
                    <label for="presencial" class="card__form-label">Presencial</label>
                </div>
                <div class="card__form-input">
                    <input type="radio" id="distancia" name="lession" value="distancia">
                    <label for="distancia" class="card__form-label">À distância</label>
                </div>
            </div>
        </div>
        <div class="card__form-item">
            <label for="matter" class="card__form-label">Área de atuação</label>
            <input type="text" name="matter" class="card__form-input" placeholder="Matemática">
        </div>
        <button>Enviar</button>
    </form>
</div>
{% endblock %}